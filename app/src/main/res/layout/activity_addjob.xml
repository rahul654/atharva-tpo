<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.apsit.apsittpo.AddJobActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="20dp"
        android:id="@+id/inputFieldLayout">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayout6"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default">

                <EditText
                    android:id="@+id/aj_job_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Job Url (http://example.com/)"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout5"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default">

        <EditText
            android:id="@+id/aj_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Job Description"
            android:inputType="textMultiLine"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textInputLayout4"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default">

        <EditText
            android:id="@+id/aj_visiting_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Visiting Date"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT DATE"
            android:id="@+id/btn_date"
            android:padding="10dp"
            android:layout_alignBottom="@+id/aj_visiting_date"
            android:layout_toRightOf="@+id/aj_visiting_date"
            android:layout_toEndOf="@+id/aj_visiting_date"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout3"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default">

        <EditText
            android:id="@+id/aj_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Salary / CTC"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout2"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default">

        <EditText
            android:id="@+id/aj_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Place / Venue"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textInputLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/aj_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Company Name"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default">

        <EditText
            android:id="@+id/aj_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:hint="Job Title"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
    </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:text="Details of Company"
        android:textColor="@color/cardview_light_background"
        android:textSize="26sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="31dp"
        android:background="@color/colorAccent"
        android:text="P U B L I S H   J O B"
        android:textColor="@color/cardview_light_background"
        android:textSize="26sp" />

</RelativeLayout>
