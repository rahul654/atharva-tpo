<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atharva.atharvatpo.Fragment.AddTpoMemberFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="31dp"
        android:text="Create a New TPO Member"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="20dp"
        android:id="@+id/inputFieldLayout">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/aj_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default">

                <EditText
                    android:id="@+id/tporeg_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Full Name"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default"
                android:layout_below="@+id/aj_job_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/tporeg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayout2"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default">

                <EditText
                    android:id="@+id/tporeg_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayout3"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default">

                <EditText
                    android:id="@+id/tporeg_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default"
                android:layout_below="@+id/textInputLayout4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/tporeg_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Place / City"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default"
                android:layout_below="@+id/textInputLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/tporeg_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Designation / Role"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/common_google_signin_btn_text_dark_default"
                android:layout_below="@+id/textInputLayout7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/tporeg_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:hint="Qualification"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/common_google_signin_btn_text_dark_default" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccent"
        android:text="A D D   T P O   M E M B E R"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />
    </RelativeLayout>
</FrameLayout>