<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/user_single_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:layout_alignLeft="@+id/user_single_college"
        android:layout_alignStart="@+id/user_single_college"
        android:layout_below="@+id/user_single_college"
        android:text="PhoneNumber"
        android:textColor="@color/cardview_light_background"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_single_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:textAllCaps="true"
        android:layout_alignLeft="@+id/user_single_name"
        android:layout_alignStart="@+id/user_single_name"
        android:layout_below="@+id/user_single_name"
        android:capitalize="words"
        android:text="College Group"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/user_single_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_single_phone"
        android:layout_alignStart="@+id/user_single_phone"
        android:layout_below="@+id/user_single_phone"
        android:layout_marginBottom="10dp"
        android:capitalize="words"
        android:inputType="textNoSuggestions"
        android:textAllCaps="true"
        android:text="address"
        android:textColor="@color/cardview_light_background"
        android:textSize="16sp" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/menu_more"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/user_single_address"
        android:background="#9E9E9E"/>

</RelativeLayout>
