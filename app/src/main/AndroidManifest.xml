<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apsit.apsittpo">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tpo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tpo_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EditProfileActivity"></activity>
        <activity android:name=".CompanyDetailsActivity" />
        <activity android:name=".StudentDetailsActivity" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".StartActivity"
            android:label="startActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".AddJobActivity" />
    </application>

</manifest>